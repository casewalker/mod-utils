{
  "schemaVersion": 1,
  "id": "modutils",
  "version": "${version}",

  "name": "Mod Utils",
  "description": "Various utilities for mods. Including a configuration handler, a file watcher, etc.",

  "authors": [
    "case_walker"
  ],
  "contact": {
    "homepage": "https://github.com/casewalker"
  },

  "license": "MIT",
  "icon": "assets/modutils/icon.png",

  "environment": "client",
  "entrypoints": {
    "main": [
      "com.casewalker.modutils.DummyModInitializer"
    ]
  },
  "mixins": [
    "modutils.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
